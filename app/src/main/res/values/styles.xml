<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Appearance.Text" parent="TextAppearance.AppCompat" />

    <style name="Base.Appearance.Text.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:padding">@dimen/small_space</item>
    </style>

    <style name="Base.Appearance.Text.Author">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bkg_rounded</item>
    </style>

    <style name="Base.CircleButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton" />
    <style name="Base.CircleButton.Big">
        <item name="android:layout_width">@dimen/circle_button_size</item>
        <item name="android:layout_height">@dimen/circle_button_size</item>
        <item name="android:layout_margin">@dimen/normal_space</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/circle_button_radius</item>
        <item name="iconTint">@color/accent</item>
    </style>

    <style name="Base.CircleButton.Small">
        <item name="android:layout_width">@dimen/circle_button_size_small</item>
        <item name="android:layout_height">@dimen/circle_button_size_small</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/circle_button_radius</item>
        <item name="iconTint">@color/accent</item>
    </style>

    android:insetLeft="0dp"
    android:insetTop="0dp"
    android:insetRight="0dp"
    android:insetBottom="0dp"

</resources>