<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Appearance.Text" parent="TextAppearance.AppCompat" />

    <style name="Base.Appearance.Text.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:padding">@dimen/small_space</item>
    </style>

    <style name="Base.Appearance.Text.Author">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bkg_rounded</item>
    </style>

</resources>